<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="title is-2">
        Forgot My Password
      </div>
      <div class="column is-4">
<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= f.error_notification %>

  <div class="field">
    <div class="control">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "input" }, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Send me reset password instructions", class: "button is-info is-medium" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>